<nav>
    <ul class="pagination justify-content-left">
        @foreach (var link in _links!)
        {
            <li @onclick="() => OnSelectedPage(link)" class="page-item @(link.Enabled ? null : "disabled" ) @(link.Active ? "active" : null)" role="button">
                @if (String.IsNullOrEmpty(link.AriaLabel))
                {
                    <span class="page-link">@link.Text</span>
                }
                else
                {
                    <span aria-hidden="true" class="page-link">@link.Text</span>
                }
            </li>
        }
    </ul>
</nav>
